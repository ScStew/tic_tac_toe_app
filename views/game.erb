                    <button id = 'buttons' name = "choice" type = "submit" value = "<%=count%>"><%=count%></button>
                        </div>
                
                <%else%>
            
                        <div id = <%="box_" + "#{count}"%> class = <%=board["#{count}"]%>>
                            <div id = "hidden">
                            <%=board["#{count}"]%>
                            </div>
                        </div>
                    
                <%end%>
                </td>
                <% if count%3 == 0%>
                </tr>
                <%end%>
                <%count += 1%>
            <%end%>
        <%end%>
        </table>
    </div>
</div>

